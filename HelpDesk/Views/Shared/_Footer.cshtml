@{
    var currentTime = DateTime.Now.ToString("HH:mm:ss");
}
<footer class="footer bg-dark text-white mt-4" style="font-size: 0.8rem;">
    <div class="container text-center">
        <p class="mb-0">© 2024 - PetroSol HelpDesk 2.0.1 | RO current time: <span id="current-time">@currentTime</span></p>
    </div>
</footer>

<script>
    function updateCurrentTime() {
        var now = new Date();
        var currentTime = now.toTimeString().split(' ')[0];
        document.getElementById('current-time').innerText = currentTime;
    }
    setInterval(updateCurrentTime, 1000);
</script>
