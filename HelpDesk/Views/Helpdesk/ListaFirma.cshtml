@model Dictionary<int?, List<string>>

@{
    Layout = null;
    var filterFirma = ViewBag.FilterFirma as string ?? "";
    var filterPriority = ViewBag.FilterPriority as int?;
    var userName = ViewBag.UserName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Firmelor după Prioritate</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/firmaList.css" />
</head>
<body>
    @Html.Partial("_Header")

    <div class="lista-firma-page-container">
        <!-- Filter Button and Dropdown Menu -->
        <div class="lista-firma-button-container">
            <button id="lista-firma-filter-button">Filtrare</button>
        </div>
        <div id="lista-firma-filter-dropdown" class="lista-firma-dropdown-content @ViewBag.FilterVisible">
            <div>
                <label for="lista-firma-filter-firma">Firma:</label>
                <input type="text" id="lista-firma-filter-firma" name="filterFirma" value="@filterFirma">
                <div id="firmaSuggestions" class="suggestions"></div>
            </div>
            <div>
                <label for="lista-firma-filter-priority">Prioritate:</label>
                <input type="text" id="lista-firma-filter-priority" name="filterPriority" value="@filterPriority">
            </div>
            <div class="lista-firma-filter-buttons">
                <button id="lista-firma-apply-filter-button">Apply Filter</button>
                <button id="lista-firma-reset-filter-button">Reset Filter</button>
            </div>
        </div>

        <!-- Table Container -->
        <div class="lista-firma-table-container">
            @if (Model.Count == 0)
            {
                <div class="no-entries-message">
                    Nu există inregistrari.
                </div>
            }
            else
            {
                <table id="lista-firma-table">
                    <thead>
                        <tr>
                            @foreach (var priority in Model.Keys.OrderBy(p => p))
                            {
                                <th>
                                    @{
                                        if (priority == 9)
                                        {
                                            <text>BlackList</text>
                                        }
                                        else
                                        {
                                            <text>Prioritate Support @priority</text>
                                        }
                                    }
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (var priority in Model.Keys.OrderBy(p => p))
                            {
                                <td>
                                    @foreach (var firma in Model[priority])
                                    {
                                        <div>@firma</div>
                                    }
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            const filterButton = $('#lista-firma-filter-button');
            const filterDropdown = $('#lista-firma-filter-dropdown');
            const applyFilterButton = $('#lista-firma-apply-filter-button');
            const resetFilterButton = $('#lista-firma-reset-filter-button');

            filterButton.click(function () {
                filterDropdown.toggleClass('visible');
            });

            applyFilterButton.click(function () {
                const filterFirma = $('#lista-firma-filter-firma').val();
                const filterPriority = $('#lista-firma-filter-priority').val();
                const url = `@Url.Action("ListaFirma", "Helpdesk")?filterFirma=${filterFirma}&filterPriority=${filterPriority}`;
                window.location.href = url;
            });

            resetFilterButton.click(function () {
                $('#lista-firma-filter-firma').val('');
                $('#lista-firma-filter-priority').val('');
            });

            $('#lista-firma-filter-firma').on('input', function () {
                const term = $(this).val();
                if (term.length >= 3) {
                    $.get('@Url.Action("GetSuggestions", "Helpdesk")', { term: term, field: 'Firma' }, function (data) {
                        let suggestions = '';
                        data.forEach(firma => {
                            suggestions += `<div class="suggestion-item">${firma}</div>`;
                        });
                        $('#firmaSuggestions').html(suggestions).show();
                    });
                } else {
                    $('#firmaSuggestions').hide();
                }
            });

            $('#firmaSuggestions').on('click', '.suggestion-item', function () {
                const selectedFirma = $(this).text();
                $('#lista-firma-filter-firma').val(selectedFirma);
                $('#firmaSuggestions').hide();
                $('#lista-firma-filter-priority').val('');
            });
        });
    </script>
</body>
</html>
