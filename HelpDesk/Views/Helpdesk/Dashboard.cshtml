@model IEnumerable<HelpdeskApp.Models.HelpdeskEntry>

@{
    Layout = null;
    var userName = ViewBag.UserName;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    @Html.Partial("_Header")


    <div class="page-container">
        <h1>Dashboard</h1>
        <div class="chart-container">
            <canvas id="callsChart"></canvas>
        </div>

        <!-- New Section for Total Calls and Duration -->
        <div class="totals-container">
            <!-- Total Calls Current Month -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-exclamation-circle" style="color: white;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.TotalCallsCurrentMonth</div>
                    <div class="label">Total Apeluri</div>
                    <div class="sub-label">Luna Curenta</div>
                </div>
            </div>
            <!-- Total Duration Current Month -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-clock" style="color: white;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.TotalDurationCurrentMonthMinutes minute</div>
                    <div class="label">Durata Totala (@ViewBag.TotalDurationCurrentMonthHours ore)</div>
                    <div class="sub-label">Luna Curenta</div>
                </div>
            </div>
            <!-- Total Calls During Schedule -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-calendar-check" style="color: white;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.TotalCallsDuringSchedule</div>
                    <div class="label">Apeluri în timpul programului</div>
                    <div class="sub-label">Luna Curenta</div>
                </div>
            </div>
            <!-- Total Duration During Schedule -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-hourglass-half" style="color: white;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.TotalDurationDuringScheduleMinutes minute</div>
                    <div class="label">Durata în timpul programului (@ViewBag.TotalDurationDuringScheduleHours ore)</div>
                    <div class="sub-label">Luna Curenta</div>
                </div>
            </div>
            <!-- Total Calls Outside Schedule -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-calendar-times" style="color: white;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.TotalCallsOutsideSchedule</div>
                    <div class="label">Apeluri în afara programului</div>
                    <div class="sub-label">Luna Curenta</div>
                </div>
            </div>
            <!-- Total Duration Outside Schedule -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-hourglass-end" style="color: white;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.TotalDurationOutsideScheduleMinutes minute</div>
                    <div class="label">Durata în afara programului (@ViewBag.TotalDurationOutsideScheduleHours ore)</div>
                    <div class="sub-label">Luna Curenta</div>
                </div>
            </div>
            <!-- New Widgets -->
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-exclamation-triangle" style="color: red;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.FirmsWithoutIdCount</div>
                    <div class="label">Firme Fără Nr.Tel Asociat</div>
                </div>
            </div>
            <div class="total-card">
                <div class="icon-container">
                    <i class="fas fa-list" style="color: red;"></i>
                </div>
                <div class="text-container">
                    <div class="number">@ViewBag.FirmsWithMultipleIdsCount</div>
                    <div class="label">Firme cu Multiple Nr.Tel</div>
                </div>
            </div>
        </div>

        <div class="tables-container">
            <div class="table">
                <h2>Top 10 Firme (Toate Timpurile)</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Firma</th>
                            <th>Număr Total Apeluri</th>
                            <th>Durată Totală Apeluri (Minute)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.AllTimeTopFirms)
                        {
                            <tr>
                                <td>@item.Firma</td>
                                <td>@item.TotalCalls</td>
                                <td>@item.TotalDuration</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="table">
                <h2>Top 10 Firme (Luna Curentă)</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Firma</th>
                            <th>Număr Total Apeluri</th>
                            <th>Durată Totală Apeluri (Minute)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.CurrentMonthTopFirms)
                        {
                            <tr>
                                <td>@item.Firma</td>
                                <td>@item.TotalCalls</td>
                                <td>@item.TotalDuration</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var callsData = @Html.Raw(Json.Serialize(ViewBag.CallsData));
            var durationsData = @Html.Raw(Json.Serialize(ViewBag.DurationsData));

            // Function to format the labels without leading zeros
            function formatLabels(labels) {
                return labels.map(label => label.replace(/^0+/, ''));
            }

            var ctx = document.getElementById('callsChart').getContext('2d');
            var callsChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: formatLabels(callsData.labels), // Format the labels
                    datasets: [{
                        label: 'Număr Total Apeluri pe Zi',
                        data: callsData.data,
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderWidth: 1,
                        fill: true,
                        spanGaps: true
                    }, {
                        label: 'Durată Totală pe Zi (minute)',
                        data: durationsData.data,
                        borderColor: 'rgba(153, 102, 255, 1)',
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderWidth: 1,
                        fill: true,
                        spanGaps: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Dată'
                            },
                            ticks: {
                                autoSkip: false, // Ensure all labels are displayed
                                maxRotation: 0,  // No rotation
                                minRotation: 0   // No rotation
                            }
                        },
                        y: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Număr/ Durată'
                            },
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                title: function (tooltipItems) {
                                    const index = tooltipItems[0].dataIndex;
                                    return callsData.fullDates[index];
                                },
                                label: function (tooltipItem) {
                                    const datasetLabel = tooltipItem.dataset.label || '';
                                    const dataValue = tooltipItem.raw.toFixed(2);
                                    if (datasetLabel === 'Durată Totală pe Zi (minute)') {
                                        const hours = Math.floor(dataValue / 60);
                                        const minutes = Math.floor(dataValue % 60); // Convert to integer
                                        return `${datasetLabel}: ${dataValue} minute (${hours} ore ${minutes} minute)`;
                                    } else {
                                        return `${datasetLabel}: ${dataValue}`;
                                    }
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>
